<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="BusinessEntities" namespace="BusinessEntities">
  <class name="Employees" table="Employees" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="EmpID" column="EmpID" type="int">
      <generator class="identity" />
    </id>

    <property name="Name" column="Name" type="String" length="50"/>
    <property name="SurName" column="SurName" type="String" length="50"/>
   
  </class>
</hibernate-mapping>